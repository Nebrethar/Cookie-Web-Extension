{

  "manifest_version": 2,
  "name": "Cookie Web Extension",
  "version": "3.0",
  "description": "Modifies GVCC",
  
  "permissions": [
 "cookies",
 "<all_urls>",
 "browsingData",
 "activeTab",
 "tabs"
 ],
	"background": {
		"scripts": ["/extension-files/background.js"]
	},
  "browser_action": {
    "default_icon": "icons/cookie-32.png",
    "default_title": "Cookie Web Extension",
    "default_popup": "extension-files/cookie.html"
  },

  "icons": {
    "48": "icons/cookie-48.png",
    "96": "icons/cookie-96.png"
  }
}